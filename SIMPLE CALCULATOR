#include<iostream>
using namespace std;
int main()
{
    int n,a,b;
    cout<<"Enter a value:";
    cin>>a;
    cout<<"Enter b value:";
    cin>>b;
    cout<<"Enter operation value:";
    cin>>n;
    switch(n)
    {
        case 1:
                cout<<a+b;
                break;
        case 2:
                cout<<a-b;
                break;
        case 3:
                cout<<a*b;
                break;
        case 4:
                cout<<a/b;
                break;
        case 5:
                cout<<a%b;
                break;
        default:
                cout<<"Invalid option";
                break;
    }
    return 0;
}
OUTPUT
Enter a value:5
Enter b value:5
Enter operation value:3
25
