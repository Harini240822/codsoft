#include<iostream>
using namespace std;
int main()
{
    int a,b;
    char c;
    cout<<"Enter a value:";
    cin>>a;
    cout<<"Enter b value:";
    cin>>b;
    cout<<"Enter an arithmetic operator:";
    cin>>c;
    switch(c)
    {
        case '+':
                cout<<a+b;
                break;
        case '-':
                cout<<a-b;
                break;
        case '*':
                cout<<a*b;
                break;
        case '/':
                cout<<a/b;
                break;
        case '%':
                cout<<a%b;
                break;
        default:
                cout<<"Invalid option";
                break;
    }
    return 0;
}
OUTPUT
Enter a value:5
Enter b value:5
Enter an arithmetic operator:*
25

=== Code Execution Successful ===
